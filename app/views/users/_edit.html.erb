<%= simple_form_for :search, method: :get do |f| %>
  <div class="search-form-control form-group mt-2">
    <input class="form-control string required" type="text" name="query" id="friend_search_query" placeholder="Add a friend" autocomplete="off"/>
    <button name="button" type="submit" class="btn btn-flat btn-sm">
      <i class="fas fa-search"></i>
    </button>
  </div>
<% end %>
<ul id="friend-results" class="nobullet" style="list-style-type: none">
</ul>

<%= simple_form_for [@user] do |f| %>
<%= f.hidden_field :shuffle_friend, value:"" %>

<div class="flex-column mt-2">
  <%= f.submit "Shuffle With A Friend", class: "btn-submit-friend", id: "addButton" %>
  <%= f.submit "Shuffle Solo", class: "btn-submit-solo mt-2", id: "soloButton" %>
</div>
<% end %>
<br><br>

