<%= simple_form_for :search, url: users_path,method: :get do |f| %>
  <div class="search-form-control form-group">
    <input class="form-control string required" type="text" name="query" id="search_query" placeholder="Find a friend / movie" autocomplete="off"/>
    <a class="btn btn-flat btn-sm">
      <i class="fas fa-search"></i>
    </a>
  </div>
<% end %>
